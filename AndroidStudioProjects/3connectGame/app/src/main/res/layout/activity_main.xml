<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@drawable/board"

        >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_row="2"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:layout_row="2"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_row="2"
            app:srcCompat="@drawable/yellow" />
    </GridLayout>
    <GridLayout
        android:id="@+id/grid_layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@drawable/board"
        android:alpha="0"
        >

        <ImageView
            android:id="@+id/imageView44"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:onClick="start"
            android:tag="0"
             />

        <ImageView
            android:id="@+id/imageView55"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:onClick="start"
            android:tag="1"
            />

        <ImageView
            android:id="@+id/imageView66"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:onClick="start"
            android:tag="2"
            />

        <ImageView
            android:id="@+id/imageView77"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="33dp"
            android:layout_row="1"
            android:onClick="start"
            android:tag="3"
            />

        <ImageView
            android:id="@+id/imageView88"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="33dp"
            android:layout_row="1"
            android:onClick="start"
            android:tag="4"
             />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="33dp"
            android:layout_row="1"
            android:onClick="start"
            android:tag="5"
             />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="33dp"
            android:layout_row="2"
            android:onClick="start"
            android:tag="6"
             />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="33dp"
            android:layout_row="2"
            android:onClick="start"
            android:tag="7"
             />

        <ImageView
            android:id="@+id/imageView99"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="33dp"
            android:layout_row="2"
            android:onClick="start"
            android:tag="8"
             />
    </GridLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="#ead720"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linear_layout"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="has Won"
            android:textSize="25sp"
            android:textColor="#f5f3f3"
            android:textAlignment="center"
            android:id="@+id/winner_id"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play again"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/playagine_id"
            android:onClick="playagine_id"
            />

    </LinearLayout>

</RelativeLayout>